# Kijko Backend Environment Configuration
# Copy to .env and fill in real values

# --- Supabase ---
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# --- Keycloak ---
KEYCLOAK_URL=https://auth.kijko.nl
KEYCLOAK_REALM=kijko
KEYCLOAK_CLIENT_ID=kijko-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret

# --- Stripe ---
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- CORS ---
# Comma-separated not needed â€” set as JSON list or use defaults
# CORS_ORIGINS=["http://localhost:3000","https://app.kijko.nl"]

# --- App ---
DEBUG=true
API_PREFIX=/api/v1
